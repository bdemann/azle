{
    "canisters": {
        "basic_bitcoin": {
            "type": "azle",
            "main": "src/index.ts",
            "env": ["BITCOIN_NETWORK"]
        }
    },
    "networks": {
        "local": {
            "bind": "127.0.0.1:8000",
            "type": "ephemeral",
            "replica": {
                "subnet_type": "system"
            }
        }
    },
    "defaults": {
        "bitcoin": {
            "enabled": true,
            "nodes": ["127.0.0.1:18444"],
            "log_level": "info"
        }
    }
}
